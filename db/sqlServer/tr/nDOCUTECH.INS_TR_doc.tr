	CREATE TRIGGER [nDOCUTECH].[INS_TR_doc]
	ON [nDOCUTECH].[T_DOC]
	FOR INSERT, UPDATE
	AS
	BEGIN
		
	
		DECLARE @g_id_env_key			int
		DECLARE @g_tx_env_name			varchar(256)
	
		DECLARE @g_ct_row				int
		DECLARE @g_id_return_status		int
	
		DECLARE @g_id_error_key			int
		DECLARE @g_tx_err_msg			varchar(1024)
		DECLARE @g_tx_err_msg_tmp		varchar(1024)
	
		IF (	UPDATE(id_doc_ver)
				AND EXISTS	(	SELECT	*
								FROM	INSERTED I,	DELETED D
								WHERE	I.id_doc_key = D.id_doc_key
								AND		I.id_doc_ver <= D.id_doc_ver
							)
			)
		BEGIN
			SELECT @g_tx_err_msg = 'Invalid version data out of synch for INS_TR_doc'
			RAISERROR ('@g_tx_err_msg', 16, 1) WITH SETERROR
			RETURN
		END
	
		IF (NOT EXISTS (SELECT * FROM DELETED))
		BEGIN
			-- INITIAL VERSION
	
			INSERT	T_DOC_AUDIT
			SELECT	*
			FROM	INSERTED
	
			SELECT @g_ct_row = @@rowcount, @g_id_error_key = @@error
			SELECT @g_tx_err_msg = 'Error inserting initial version into _audit_table_'
			IF (@g_id_error_key != 0 )
			BEGIN
				RAISERROR ('@g_tx_err_msg', 16, 1) WITH SETERROR
				RETURN
			END
		END
		ELSE IF (	UPDATE(id_doc_ver)
					AND EXISTS	(	SELECT *
									FROM	INSERTED I, DELETED D
									WHERE	I.id_doc_key = D.id_doc_key
									AND		I.id_doc_ver != D.id_doc_ver
								)
				)
		BEGIN
	
			INSERT	T_DOC_AUDIT
			SELECT	*
			FROM	INSERTED I
			WHERE	EXISTS(	SELECT	*
							FROM	DELETED d
							WHERE	I.id_doc_key = D.id_doc_key
							AND		I.id_doc_ver != D.id_doc_ver
						  )
	
			SELECT @g_ct_row = @@rowcount, @g_id_error_key = @@error
			SELECT @g_tx_err_msg = 'Error inserting into _audit_table_'
			IF (@g_id_error_key != 0 )
			BEGIN
				RAISERROR ('@g_tx_err_msg', 16, 1) WITH SETERROR
				RETURN
			END
		END
	
		
	END
	
GO

ALTER TABLE [nDOCUTECH].[T_DOC] ENABLE TRIGGER [INS_TR_doc]
GO


